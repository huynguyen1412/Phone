<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush Color="{StaticResource PhoneForegroundColor}" x:Key="GridColor" />
    <Style x:Key="gridProperties" TargetType="Line">
        <Setter Property="StrokeStartLineCap" Value="Round"/>
        <Setter Property="StrokeEndLineCap" Value="Round"/>
        <Setter Property="StrokeThickness" Value="7"/>
        <Setter Property="Stroke" Value="{StaticResource GridColor}"/>
    </Style>
    
</ResourceDictionary>
